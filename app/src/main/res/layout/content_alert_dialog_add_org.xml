<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="22dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="6dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/roboto"
        android:text="Create a group"
        android:textColor="@color/black_80_transparent"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/msg_add_org"
        android:textColor="@color/black_80_transparent"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_rounded_create_org"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Organization name"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black_80_transparent"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_rounded_create_org"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Organization categories. ex : Technology"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black_80_transparent"
            android:textSize="12sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:text="Division"
                android:textColor="@color/black_80_transparent"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Non-Division"
                android:textColor="@color/black_80_transparent"
                android:textSize="12sp" />
        </RadioGroup>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_rounded_create_org"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:gravity="top"
            android:hint="Descriptions (opsional)"
            android:inputType="textMultiLine"
            android:lines="4"
            android:padding="8dp"
            android:textColor="@color/black_80_transparent"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms"
            android:textColor="@color/black_80_transparent"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="-16dp"
        android:background="@color/transparent"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNextTime"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="@font/roboto"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="@font/roboto"
            android:text="Create"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
</LinearLayout>