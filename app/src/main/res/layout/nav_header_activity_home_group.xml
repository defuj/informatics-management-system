<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fb="http://schemas.android.com/tools"
    android:id="@+id/layout_account_full"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/currentAccountLogin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_account_circle_black_24dp"
                android:contentDescription="@string/nav_header_desc"
                app:roundAsCircle="true"
                fb:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="55dp">

                <TextView
                    android:id="@+id/namatext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/source_sanspro_regular"
                    android:singleLine="true"
                    android:text="@string/full_name"
                    android:textColor="@color/black_60_transparent"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/emailtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-3dp"
                    android:fontFamily="@font/source_sanspro_regular"
                    android:singleLine="true"
                    android:text="@string/username_domain_com"
                    android:textColor="@color/black_60_transparent"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/drop_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:paddingEnd="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp" />

                <com.google.android.material.navigation.NavigationView
                    android:id="@+id/navSecond"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:elevation="0dp"
                    app:insetForeground="@color/white"
                    app:itemBackground="@drawable/nav_item_background"
                    app:itemIconTint="@drawable/nav_item_text"
                    app:itemTextColor="@drawable/nav_item_text"
                    app:menu="@menu/menu_accounts_drawer" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</LinearLayout>
